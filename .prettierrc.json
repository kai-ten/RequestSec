{
	"arrowParens": "avoid",
	"printWidth": 80,
    "tabWidth": 2,
	"singleQuote": true,
	"trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
	"useTabs": false,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"proseWrap": "never"
			}
		}
	]
}